{
  "name": "KHS Construction & Remodeling CRM",
  "short_name": "KHS CRM",
  "description": "Mobile-first field operations platform for construction professionals. Access jobs, customers, and materials offline in the field.",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["standalone", "window-controls-overlay", "minimal-ui"],
  "orientation": "portrait-primary",
  "theme_color": "#1e40af",
  "background_color": "#ffffff",
  "categories": ["business", "productivity", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Dashboard view showing active jobs"
    },
    {
      "src": "/screenshots/customer-list.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Customer list with search functionality"
    },
    {
      "src": "/screenshots/materials.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Materials checklist for job site shopping"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Active Jobs",
      "short_name": "Jobs",
      "description": "View all active construction jobs",
      "url": "/jobs?status=active",
      "icons": [
        {
          "src": "/icons/jobs-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Add Customer",
      "short_name": "New Customer",
      "description": "Add a new construction customer",
      "url": "/customers/new",
      "icons": [
        {
          "src": "/icons/add-customer-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Materials List",
      "short_name": "Materials",
      "description": "Check materials for current jobs",
      "url": "/materials",
      "icons": [
        {
          "src": "/icons/materials-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Field Dashboard",
      "short_name": "Field",
      "description": "Field worker dashboard with today's jobs",
      "url": "/dashboard?view=field",
      "icons": [
        {
          "src": "/icons/field-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+khscrm",
      "url": "/open?url=%s"
    }
  ]
}